#%Module

proc ModulesHelp { } {
    puts stderr {   SCons is a software construction tool. - Homepage: http://www.scons.org/
    }
}

module-whatis {Description: SCons is a software construction tool. - Homepage: http://www.scons.org/}

set root    /share/easybuild/RHEL6.3/sandybridge/software/SCons/2.3.0-goolf-1.5.14-Python-2.7.8

conflict SCons

if { ![is-loaded goolf/1.5.14] } {
    module load goolf/1.5.14
}

if { ![is-loaded Python/2.7.8-goolf-1.5.14] } {
    module load Python/2.7.8-goolf-1.5.14
}

