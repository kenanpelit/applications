setenv	EBROOTSCONS		"$root"
setenv	EBVERSIONSCONS		"2.3.0"
setenv	EBDEVELSCONS		"$root/easybuild/SCons-2.3.0-goolf-1.5.14-Python-2.7.8-easybuild-devel"

