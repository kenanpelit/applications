#%Module

proc ModulesHelp { } {
    puts stderr {   This is an MPI 3.0 implementation.  It is based on MPICH2 and MVICH. - Homepage: http://mvapich.cse.ohio-state.edu/overview/mvapich2/
    }
}

module-whatis {Description: This is an MPI 3.0 implementation.  It is based on MPICH2 and MVICH. - Homepage: http://mvapich.cse.ohio-state.edu/overview/mvapich2/}

set root    /share/easybuild/RHEL6.3/westmere/software/MVAPICH2/1.9-GCC-4.8.2

conflict    MVAPICH2

if { ![is-loaded GCC/4.8.2] } {
    module load GCC/4.8.2
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig

setenv	EBROOTMVAPICH2		"$root"
setenv	EBVERSIONMVAPICH2		"1.9"
setenv	EBDEVELMVAPICH2		"$root/easybuild/MVAPICH2-1.9-GCC-4.8.2-easybuild-devel"


