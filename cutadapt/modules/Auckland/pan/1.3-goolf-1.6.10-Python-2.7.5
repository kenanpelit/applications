#%Module

proc ModulesHelp { } {
    puts stderr {    cutadapt removes adapter sequences 
 from high-throughput sequencing data. This is usually 
 necessary when the read length of the sequencing machine 
 is longer than the molecule that is sequenced, for 
 example when sequencing microRNAs.   - Homepage: http://code.google.com/p/cutadapt/
    }
}

module-whatis {Description:  cutadapt removes adapter sequences 
 from high-throughput sequencing data. This is usually 
 necessary when the read length of the sequencing machine 
 is longer than the molecule that is sequenced, for 
 example when sequencing microRNAs.   - Homepage: http://code.google.com/p/cutadapt/}

set root    /share/easybuild/RHEL6.3/westmere/software/cutadapt/1.3-goolf-1.6.10-Python-2.7.5

conflict    cutadapt

if { ![is-loaded goolf/1.6.10] } {
    module load goolf/1.6.10
}

if { ![is-loaded Python/2.7.5-goolf-1.6.10] } {
    module load Python/2.7.5-goolf-1.6.10
}

prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	PATH		$root/bin

setenv	EBROOTCUTADAPT		"$root"
setenv	EBVERSIONCUTADAPT		"1.3"
setenv	EBDEVELCUTADAPT		"$root/easybuild/cutadapt-1.3-goolf-1.6.10-Python-2.7.5-easybuild-devel"

prepend-path	PYTHONPATH		$root/lib/python2.7/site-packages

