#%Module

proc ModulesHelp { } {
    puts stderr {   Libxslt is the XSLT C library developed for the GNOME project (but usable
outside of the Gnome platform). - Homepage: http://xmlsoft.org/
    }
}

module-whatis {Description: Libxslt is the XSLT C library developed for the GNOME project (but usable
outside of the Gnome platform). - Homepage: http://xmlsoft.org/}

set root    /share/easybuild/RHEL6.3/sandybridge/software/libxslt/1.1.28-iomkl-6.5.4

conflict    libxslt

if { ![is-loaded zlib/1.2.8-iomkl-6.5.4] } {
    module load zlib/1.2.8-iomkl-6.5.4
}

if { ![is-loaded libxml2/2.9.1-iomkl-6.5.4] } {
    module load libxml2/2.9.1-iomkl-6.5.4
}

if { ![is-loaded iomkl/6.5.4] } {
    module load iomkl/6.5.4
}

prepend-path	ACLOCAL_PATH		$root/share/aclocal
prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig

setenv	EBROOTLIBXSLT		"$root"
setenv	EBVERSIONLIBXSLT		"1.1.28"
setenv	EBDEVELLIBXSLT		"$root/easybuild/libxslt-1.1.28-iomkl-6.5.4-easybuild-devel"


