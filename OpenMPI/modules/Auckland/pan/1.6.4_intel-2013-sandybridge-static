#%Module1.0

proc ModulesHelp { } {
  puts stderr "OpenMPI 1.6.4 compiled with Intel Cluster Studio XE 2013 (STATIC)"
  puts stderr "TAGS: mpi"
  puts stderr "URL: http://www.open-mpi.org/"
}

module-whatis "OpenMPI 1.6.4 compiled with Intel Cluster Studio XE 2013 (STATIC)"

module load intel/ics-2013

set root     /share/mpi/openmpi/sandybridge/1.6.4/intel-2013
prepend-path PATH            $root/bin
prepend-path MANPATH         $root/man
prepend-path LD_LIBRARY_PATH $root/lib

set-alias  MPIRUN  "mpirun -machinefile \$LOADL_HOSTFILE -x PATH -x LD_LIBRARY_PATH -mca btl ^tcp \$*"
